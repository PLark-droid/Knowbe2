# Knowbe2 - Miyabi Framework v0.20.0
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# GitHub Personal Access Token (必須)
GITHUB_TOKEN=ghp_xxxxx

# Anthropic API Key (Agent実行時に必須)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# GitHub Repository (owner/repo)
REPOSITORY=PLark-droid/Knowbe2

# Webhook URL (オプション - ダッシュボード通知用)
MIYABI_WEBHOOK_URL=

# Device Identifier (ログ記録用)
DEVICE_IDENTIFIER=

# ─── LINE Messaging API ───────────────────────────────
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
LINE_LIFF_ID=

# ─── Lark (Feishu) ────────────────────────────────────
LARK_APP_ID=
LARK_APP_SECRET=
LARK_DOMAIN=https://open.larksuite.com
LARK_BASE_APP_TOKEN=

# ─── Lark Base テーブルID ────────────────────────────────
# provision-lark-base.ts で自動設定
LARK_TABLE_FACILITY=
LARK_TABLE_USER=
LARK_TABLE_STAFF=
LARK_TABLE_ATTENDANCE=
LARK_TABLE_HEALTH_CHECK=
LARK_TABLE_SUPPORT_RECORD=
LARK_TABLE_WAGE=
LARK_TABLE_INVOICE=
LARK_TABLE_SERVICE_CODE=
LARK_TABLE_PRODUCT_ACTIVITY=
LARK_TABLE_PRODUCT_OUTPUT=
LARK_TABLE_WORK_SCHEDULE=

# ─── Lark フォーム共有URL ───────────────────────────────
LARK_FORM_ATTENDANCE=
LARK_FORM_HEALTH_CHECK=
LARK_FORM_SUPPORT_RECORD=

# ─── サーバー設定 ─────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─── マルチテナント ───────────────────────────────────
